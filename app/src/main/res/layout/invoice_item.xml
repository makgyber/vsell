<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rl_chat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_chat_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profile_photo2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Chat Topic"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Store Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:textSize="10sp" />



        </LinearLayout>

        <ImageView
            android:id="@+id/iv_new_message"
            android:layout_toEndOf="@id/ll_chat_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_new_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>